<%= form_for @conn, session_path(@conn, :create), [as: :session, class: 'login-form'], fn f -> %>
  <div class="form-group">
    <%= label f, :email, gettext("user.email"), class: "control-label" %>
    <%= text_input f, :email, placeholder: gettext("user.email"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :password, gettext("user.password"), class: "control-label" %>
    <%= password_input f, :password, placeholder: gettext("user.password"), class: "form-control" %>
  </div>

  <%= submit gettext("Log in"), class: "btn btn-primary" %>

  <p>
    <%= link gettext("Forgot password?"), to: reset_password_path(@conn, :new) %>
  </p>

<% end %>
