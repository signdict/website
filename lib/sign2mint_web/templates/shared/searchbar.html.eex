<%= if assigns[:searchbar] == true do %>
  <form action="/search" data-controller="toggle-filter">
    <div class="s2m-searchbar">
      <div class="o-container o-container--medium">

          <div class="s2m-searchbar--container">
            <div class="s2m-searchbar--input">
              <div class="s2m-searchbar--input--wrapper">
                <input class="s2m-searchbar--input--inner" type="text" name="q" placeholder="Tippe ein Wort ein, um die GebÃ¤rde in DGS zu sehen" value="<%= @conn.params["q"] %>" data-controller="search"/>
              </div>
              <button type="button" class="s2m-searchbar--filtertoggle" data-target="toggle-filter.button" text="Filter zeigen oder verstecken"><i class="fa fa-filter"></i></button>
            </div>
            <button class="s2m-searchbar--submit" type="submit">
              <span class="s2m-searchbar--text">
                Suche&nbsp;&gt;
              </span>
            </button>
            <a href="/entry" class="s2m-searchbar--all-letters">
              A&nbsp;-&nbsp;Z&nbsp;&gt;
            </a>
          </div>

      </div>
    </div>
    <div data-target="toggle-filter.filterbar">
      <%= render Sign2MintWeb.SharedView, "filterbar.html", conn: @conn %>
    </div>
  </form>
<% end %>
