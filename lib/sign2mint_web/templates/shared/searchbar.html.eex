      <div class="o-container o-container--medium">

          <div class="s2m-searchbar--container">
            <div class="s2m-searchbar--input">
            <input class="s2m-searchbar--input--inner" type="text" name="q" placeholder="Tippe ein Wort ein, um die GebÃ¤rde in DGS zu sehen" value="<%= @conn.params["q"] %>" data-controller="search"/>
            </div>
            <button class="s2m-searchbar--submit" type="submit">
              <span class="s2m-searchbar--text">
